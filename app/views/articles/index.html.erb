<div class="col-sm-8 blog-main">

  <% @articles.each do |article| %>
    <div class="blog-post">
      <h2 class="blog-post-title"><%= article.title.capitalize %></h2>
      <img src="<%= article.image_url %>" alt="article image" class="img-responsive">
      <!--<img src="800x250" class="img-responsive" alt="Responsive image">-->
      <p class="blog-post-meta"><% article.publish_date %> by <%= article.user.name %></p>
      <% body = article.body || 'No Content Available' %>
      <p><%= truncate(body, length: 250)%></p>
      <%= link_to 'Click here to view more', article_path(article) if  user_signed_in? %>
      <hr>
    </div>
  <% end %>

  <nav>
    <ul class="pagination">
      <li><a href="#">1</a></li>
      <li><a href="#">2</a></li>
      <li><a href="#">3</a></li>
      <li><a href="#">4</a></li>
      <li><a href="#">5</a></li>
    </ul>
  </nav>

</div>
